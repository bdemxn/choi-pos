---
import { AdminLayout } from "@layouts/auth";
import { Card, Divider } from "@widgets/auth";

const user = "kevin123";

// [cards] is a const for testing <-
const cards = [
  {
    title: "Testing title",
    description: "Description about any statistic",
    subTitle: "Sells",
    stats: "10,000",
  },
  {
    title: "Testing title",
    description: "Description about any statistic",
    subTitle: "Sells",
    stats: "10,000",
  },
  {
    title: "Testing title",
    description: "Description about any statistic",
    subTitle: "Sells",
    stats: "10,000",
  },
  {
    title: "Testing title",
    description: "Description about any statistic",
    subTitle: "Sells",
    stats: "10,000",
  },
];
---

<AdminLayout>
  <section class="p-4">
    <div class="h-[700px]">
      <!-- Header -->
      <div>
        <h1 class="font-bold text-2xl text-white">
          Bienvenido, {user}
        </h1>
        <span class="text-white/80">Veamos que tenemos para ti.</span>
        <hr class="my-4 border-white/50" />
      </div>

      <!-- Card sections -->
      <div class="grid grid-cols-4 gap-2">
        {
          cards.map(({ description, stats, subTitle, title }) => (
            <Card
              description={description}
              stats={stats}
              subTitle={subTitle}
              titleCard={title}
            />
          ))
        }
      </div>
      <section class="mt-10">
        <Divider />
        <div class="mt-20 grid grid-cols-4 gap-2">
          {
            cards.map(({ description, stats, subTitle, title }) => (
            <Card
              description={description}
              stats={stats}
              subTitle={subTitle}
              titleCard={title}
            />
          ))
          }
        </div>
      </section>
    </div>
  </section>
</AdminLayout>
