---
interface Props {
  titleCard: string;
  description: string;
  subTitle: string;
  stats: string;
}

const { titleCard, description, subTitle, stats } = Astro.props;
---

<a
  href="admin/reports"
  class="relative block overflow-hidden rounded-lg border border-gray-100 p-8 w-[100%] hover:border-l-8 duration-200"
>
  <span
    class="absolute inset-x-0 bottom-0 h-2 bg-gradient-to-r from-green-300 via-blue-500 to-purple-600"
  ></span>

  <div class="sm:flex sm:justify-between sm:gap-4">
    <div>
      <h3 class="text-xl font-extrabold text-white uppercase">
        {titleCard}
      </h3>
    </div>
  </div>

  <div class="mt-4">
    <p class="text-pretty text-sm text-gray-500">
      {description}
    </p>
  </div>

  <dl class="mt-6 flex gap-4 sm:gap-6">
    <div class="flex flex-col-reverse">
      <dt class="text-sm font-medium text-gray-200">{subTitle}</dt>
      <dd class="text-xs text-gray-100 font-extrabold">{stats}</dd>
    </div>
  </dl>
</a>
